<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#488A05"
    tools:context=".UI.VictoryScreen">

    <TextView
        android:id="@+id/victoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/victoryTitle"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/victoryText"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/victoryText"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victoryTitle" />

    <Button
        android:id="@+id/victoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/victoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/victorySeekCount" />

    <ImageView
        android:id="@+id/victoryLeftImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/victoryLeftImage"
        android:hapticFeedbackEnabled="false"
        android:scaleX="-1"
        app:layout_constraintEnd_toStartOf="@+id/victoryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/victoryText"
        app:srcCompat="@drawable/dart_monkey" />

    <ImageView
        android:id="@+id/victoryRightImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/victoryRightImage"
        android:scaleY="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/victoryText"
        app:layout_constraintTop_toTopOf="@+id/victoryText"
        app:srcCompat="@drawable/dart_monkey" />

    <TextView
        android:id="@+id/victorySeekCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/victoryScoreCount"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/victoryText"
        app:layout_constraintStart_toStartOf="@+id/victoryText"
        app:layout_constraintTop_toBottomOf="@+id/victoryText" />
</androidx.constraintlayout.widget.ConstraintLayout>